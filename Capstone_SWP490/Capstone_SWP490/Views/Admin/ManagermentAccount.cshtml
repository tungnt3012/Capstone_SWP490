@{
    ViewBag.Title = "Managerment Account | Admin";
    var profile = Session["profile"] as Capstone_SWP490.Models.app_userViewModel.app_userViewModel;
    var lstUsers = ViewData["Users"] as Capstone_SWP490.Models.PagingOutput<List<Capstone_SWP490.Models.app_userViewModel.app_userViewModel>>;
}

<style>

    table.dataTable thead .sorting:after,
    table.dataTable thead .sorting:before,
    table.dataTable thead .sorting_asc:after,
    table.dataTable thead .sorting_asc:before,
    table.dataTable thead .sorting_asc_disabled:after,
    table.dataTable thead .sorting_asc_disabled:before,
    table.dataTable thead .sorting_desc:after,
    table.dataTable thead .sorting_desc:before,
    table.dataTable thead .sorting_desc_disabled:after,
    table.dataTable thead .sorting_desc_disabled:before {
        bottom: .5em;
    }
</style>
<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">Management Account</label>
        </div>
    </div>
    <div class="main">
        <div class="row">

            <div class="col-lg-10 col-lg-offset-1" id="under" style="overflow:auto">
                <br />
                    <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%" >
                        <thead>
                            <tr>
                                <th class="th-sm">Full Name</th>
                                <th class="th-sm">Account Name</th>
                                <th class="th-sm">Role</th>
                                <th class="th-sm">Verify</th>
                                <th class="th-sm">Status</th>
                                <th class="th-sm"></th>
                            </tr>
                        </thead>
                        <tbody id="table-events">
                            @if (lstUsers.Data != null)
                            {
                                foreach (var x in lstUsers.Data)
                                {
                                    <tr>
                                        <td>@x.full_name</td>
                                        <td>@x.email</td>
                                        <td>@x.user_role</td>
                                        <td>@x.verified</td>
                                        <td style="color: @(x.active == true ? "green" : " red")">@(x.active == true ? "Active" : "Deactive")</td>
                                        <td>
                                            @if (x.active == true)
                                            {
                                                <a href="@Url.Action("DisableUsers", "Admin")?user_id=@x.user_id">Deactive</a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("EnableUsers", "Admin")?user_id=@x.user_id">Active</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    @*<div class="text-center" id="p-paging">
                            <ul class="pagination pagination-sm no-margin">
                                <li><a href="/Admin/NextPage?pageIndex=0">&laquo;</a></li>
                                @for (int i = 0; i < lstUsers.TotalPage; i++)
                                {
                                    int n = i + 1;
                                    <li><a href="/Admin/NextPage?pageIndex=@n">@n</a></li>
                                }
                                <li><a href="/Admin/NextPage?pageIndex=@lstUsers.TotalPage">&raquo;</a></li>
                            </ul>
                        </div>*@

            </div>
        </div>

    </div>

</div>

<input type="hidden" id="userss" value="@Session["username"]">
@if (Session["username"] != null)
{
    <input type="hidden" id="user_role" value="@profile.user_role">
}
else
{
    <input type="hidden" id="user_role" value="0">
}

<script>
    $(document).ready(function () {
        $('#dtBasicExample').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });

</script>