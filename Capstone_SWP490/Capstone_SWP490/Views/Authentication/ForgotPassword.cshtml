@model Capstone_SWP490.Models.app_userViewModel.app_userViewModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_SigninLayout.cshtml";
}

<div id="wrapper-home">
    <div class="back">
        <div class="div-center-chang">
            <div class="content">
                <div class="form-group">
                    <label for="exampleInputUserLogin" id="homeUserChangPassword">Forgot your password?</label>
                </div>
                <div class="form-group">
                    <label for="exampleInputUserLogin" id="homeUserChangPasswordSub">Don't worry! Just fill in your email and we'll send you a link to reset  you password.</label>
                </div>
                @using (Html.BeginForm("ForgotPassword", "Authentication"))
                {
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.email, new { @type = "email", @class = "form-control", id = "exampleInputLoginUser", placeholder = "Your email address", required = "required" })
                        @*<input class="form-control" id="exampleInputLoginUser" name="ForgetPassword" type="text" value="" placeholder="Email address" />*@
                    </div>
                    <div class="form-group">
                        <p style="color:red">
                            <strong>
                                <i>
                                    @ViewData["SendError"]
                                </i>
                            </strong>
                        </p>
                        <p style="color:green">
                            <strong>
                                <i>
                                    @ViewData["SendSuccess"]
                                </i>
                            </strong>
                        </p>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" id="btnHomeLogin">Send</button>
                    </div>
                }
                <div class="form-group pull-left">
                    <a href="/Authentication">Login page</a>
                </div>
            </div>
        </div>
    </div>
</div>


