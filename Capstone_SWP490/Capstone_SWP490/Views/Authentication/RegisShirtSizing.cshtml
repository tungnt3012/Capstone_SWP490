@model Capstone_SWP490.member
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register Shirt Size";

}

<div id="page-content-wrapper">
    <div class="container-fluid xyz">
        <div class="col-lg-12" id="content_area2_header">
            <div class="col-lg-12" id="content_area2_title">
                <label for="exampleInputTitle">Shirt-Sizing</label>
            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm("RegisShirtSizing", "Authentication"))
            {
                        <div class="col-lg-10 col-lg-offset-1" id="under">

                            <table class="table table-striped">
                                @if (Model != null)
                                {
                                    <caption style="color: @ViewData["color"]; font-weight: bold ">
                                        @ViewData["Result"]
                                    </caption>
                                }
                                <caption style="color: black;font-weight: bold " for="exampleInputshirtSizingTitle" id="shirtSizingTitle">The following table shows the t-shirt size guide for choosing your appropriate event shirt size.</caption>
                                <caption style="color: black;font-weight: bold " for="exampleInputshirtSizingTitle" id="shirtSizingTitle">Your current Size: <span style="color:green">@Model.shirt_sizing</span> </caption>
                                <thead>
                                    <tr>
                                        <th scope="col" class="size-tittle"></th>
                                        <th scope="col" class="size-tittle">XS</th>
                                        <th scope="col" class="size-tittle">S</th>
                                        <th scope="col" class="size-tittle">M</th>
                                        <th scope="col" class="size-tittle">L</th>
                                        <th scope="col" class="size-tittle">XL</th>
                                        <th scope="col" class="size-tittle">2XL</th>
                                        <th scope="col" class="size-tittle">3XL</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">Chest Width</th>
                                        <td>18"</td>
                                        <td>19"</td>
                                        <td>20"</td>
                                        <td>21"</td>
                                        <td>22"</td>
                                        <td>23"</td>
                                        <td>24"</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Length</th>
                                        <td>26"</td>
                                        <td>27"</td>
                                        <td>28"</td>
                                        <td>29"</td>
                                        <td>30"</td>
                                        <td>31"</td>
                                        <td>32"</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Choose  size</th>

                                        <td>
                                            <div class="form-check form-check-inline">
                                                @*<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">*@
                                                @Html.RadioButtonFor(model => model.shirt_sizing, "XS")
                                                <label class="form-check-label" for="inlineRadio1">XS</label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check form-check-inline">
                                                @*<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">*@
                                                @Html.RadioButtonFor(model => model.shirt_sizing, "S")
                                                <label class="form-check-label" for="inlineRadio1">S</label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check form-check-inline">
                                                @*<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">*@
                                                @Html.RadioButtonFor(model => model.shirt_sizing, "M")
                                                <label class="form-check-label" for="inlineRadio1">M</label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check form-check-inline">
                                                @*<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">*@
                                                @Html.RadioButtonFor(model => model.shirt_sizing, "L")
                                                <label class="form-check-label" for="inlineRadio1">L</label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check form-check-inline">
                                                @*<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">*@
                                                @Html.RadioButtonFor(model => model.shirt_sizing, "XL")
                                                <label class="form-check-label" for="inlineRadio1">XL</label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check form-check-inline">
                                                @*<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">*@
                                                @Html.RadioButtonFor(model => model.shirt_sizing, "2XL")
                                                <label class="form-check-label" for="inlineRadio1">2XL</label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check form-check-inline">
                                                @*<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">*@
                                                @Html.RadioButtonFor(model => model.shirt_sizing, "3XL")
                                                <label class="form-check-label" for="inlineRadio1">3XL</label>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            @if (Model != null)
                            {
                                if (@ViewData["color"].Equals("green"))
                                {
                                    <script type='text/javascript'>
                                        alert('Register you shirt-size Successfully !!!');
                                        location.href = '/Home';
                                    </script>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary" id="shirtSizinngNext">Next</button>
                                    </div>
                                }
                            }
                        </div>
            }
        </div>
    </div>
</div>