    //            $('#event-upload').attr("disabled", false);
    //            $('#text-error-date').html("");
    //        }
    //    }
    //}
    document.getElementById('Contestname').onkeyup = function () {
        var EventContactorName = $("#Contestname").val();
        if (EventContactorName.length >= 1) {
            document.getElementById("Contestname").style.borderColor = "#66afe9";
        }
        else {
            document.getElementById("Contestname").style.borderColor = "red";
        }
    }
    document.getElementById('Code').onkeyup = function () {
        var EventContactorName = $("#Code").val();
        if (EventContactorName.length >= 1) {
            document.getElementById("Code").style.borderColor = "#66afe9";
        }
        else {
            document.getElementById("Code").style.borderColor = "red";
        }
    }
    document.getElementById('Venue').onkeyup = function () {
        var EventContactorName = $("#Venue").val();
        if (EventContactorName.length >= 1) {
            document.getElementById("Venue").style.borderColor = "#66afe9";
        }
        else {
            document.getElementById("Venue").style.borderColor = "red";
        }
    }
</script>