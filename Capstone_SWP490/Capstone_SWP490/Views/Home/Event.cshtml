@{
    ViewBag.Title = "Event";
    var profile = Session["profile"] as Capstone_SWP490.Models.app_userViewModel.app_userViewModel;
    var lstEvent = ViewData["Events"] as List<Capstone_SWP490.Models.events_ViewModel.eventsViewModel>;
    var member = ViewData["Members"] as Capstone_SWP490.member;
}
<style>
    #menu-event {
        color: #ffffff !important;
        background: #30cf6b;
    }
</style>


<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">Event</label>
        </div>
    </div>
    <div class="main">
        <div class="column">
            <div class="col-lg-12">
                <div class="column">
                    <div class="form-group">
                        <label class="Event-Schedule" for="Event_Schedule">
                            Event Schedule
                        </label>
                    </div>
                    <div class="form-group">
                        <h5 style="color:red"> @ViewData["error"] </h5>
                        <h5 style="color:green"> @ViewData["success"] </h5>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                <label for="type-event">Date FROM:</label>
                                <input type="date" class="form-control" id="from-date" value="none" placeholder="From">
                            </div>
                            <div class="col-lg-4">
                                <label for="type-event">Date TO:</label>
                                <input type="date" class="form-control" id="to-date" value="none" placeholder="To">
                            </div>
                            <div class="col-lg-4" style="padding-top: 10px">
                                <button class="btn btn-primary" id="btn-search" onclick="SearchEvent()"> Search</button>
                            </div>
                        </div>
                    </div>
                    @if (Session["username"] != null)
                    {
                        if (profile.user_role.Equals("ORGANIZER"))
                        {
                            <div class="pull-right">
                                <button type="button" onclick="window.location.href='/Home/EventUpload'" class="btn btn-success">Add</button>
                            </div>
                        }
                    }
                    <div class="col-lg-12" style="overflow:auto">
                        <table class="table table-striped table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th scope="col">Title</th>
                                    <th scope="col">Time Start</th>
                                    <th scope="col">Time End</th>
                                    <th scope="col">Location</th>
                                    <th scope="col">Contactor phone</th>
                                    @if (Session["username"] != null)
                                    {
                                        if (profile.user_role.Equals("ORGANIZER"))
                                        {
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                        }
                                    }
                                </tr>
                            </thead>
                            <tbody id="table-events">
                                @if (lstEvent != null)
                                {
                                    foreach (var x in lstEvent)
                                    {
                                        <tr>
                                            <td scope="row">@x.title</td>
                                            <td>@x.start_date_str</td>
                                            <td>@x.end_date_str</td>
                                            <td>@x.venue</td>
                                            <td>@x.contactor_phone</td>
                                            @if (Session["username"] != null)
                                            {
                                                if (profile.user_role.Equals("ORGANIZER"))
                                                {
                                                    <td><a href="/Home/EventEdit?id=@x.event_id">Edit</a></td>
                                                    <td><a href="/Home/EventDetail?id=@x.event_id">Detail</a></td>
                                                    <td><a href="/Home/EventDelete?id=@x.event_id">Delete</a></td>
                                                }
                                                else
                                                {
                                                    <td><a href="/Home/EventDetail?id=@x.event_id">Detail</a></td>
                                                }
                                            }
                                            else
                                            {
                                                <td><a href="/Home/EventDetail?id=@x.event_id">Detail</a></td>
                                            }
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td><i>No event</i></td></tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Session["username"] != null)
                    {
                        if (member != null)
                        {
                            if (member.event_notify == false)
                            {
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-primary pull-right" onclick="JoinEvent(this)" member-id="@member.member_id" id="btn-registration_title">
                                        @*<a href="/Home/JoinEvent?userId=@member.member_id" class="button">Join Now</a>*@
                                        Join Now
                                    </button>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>

    </div>

</div>
<input type="hidden" id="userss" value="@Session["username"]">
@if (Session["username"] != null)
{
    <input type="hidden" id="user_role" value="@profile.user_role">
}
else
{
    <input type="hidden" id="user_role" value="0">
}

<script>

    function SearchEvent() {
        var fromdate = $("#from-date").val();
        var todate = $("#to-date").val();
        var vas = $("#userss").val();
        var role = $("#user_role").val();
        //alert("Searching " + fromdate + " To " + todate)

        let objectIn = {
            start_date: fromdate,
            end_date: todate
        };


        $.ajax({
            type: 'POST',
            url: '@Url.Action("SearchEvent", "Home")',
            data: JSON.stringify(objectIn),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (results) {
                if (results != null) {
                    document.getElementById("table-events").innerHTML = "";
                    if (vas != "" && role == 'ORGANIZER') {
                        for (let i = 0; i < results.Data.length; i++) {
                            let _startDate = new Date(+("" + results.Data[i].start_date).slice(6, 19)).toLocaleString('en-GB', { year: "numeric", day: "2-digit", month: "2-digit" }).split("/").join("-");
                            let _endDate = new Date(+("" + results.Data[i].end_date).slice(6, 19)).toLocaleString('en-GB', { year: "numeric", day: "2-digit", month: "2-digit" }).split("/").join("-");
                            document.getElementById("table-events").innerHTML += `<tr>
                                            <td scope="row">`+ results.Data[i].title+`</td>
                                            <td>`+ _startDate+`</td>
                                            <td>`+ _endDate+`</td>
                                            <td>`+ results.Data[i].venue+`</td>
                                            <td>`+ results.Data[i].contactor_phone+`</td>
                                            <td><a href="/Home/EventEdit?id=`+ results.Data[i].event_id +`">Edit</a></td>
                                            <td><a href="/Home/EventDetail?id=`+ results.Data[i].event_id+`">Detail</a></td>
                                            <td><a href="/Home/EventDelete?id=`+ results.Data[i].event_id +`">Delete</a></td>
                                        </tr>`;
                        }
                    } else {
                        for (let i = 0; i < results.Data.length; i++) {
                            let _startDate = new Date(+("" + results.Data[i].start_date).slice(6, 19)).toLocaleString('en-GB', { year: "numeric", day: "2-digit", month: "2-digit" }).split("/").join("-");
                            let _endDate = new Date(+("" + results.Data[i].end_date).slice(6, 19)).toLocaleString('en-GB', { year: "numeric", day: "2-digit", month: "2-digit" }).split("/").join("-");
                            document.getElementById("table-events").innerHTML += `<tr>
                                            <td scope="row">`+ results.Data[i].title + `</td>
                                            <td>`+ _startDate + `</td>
                                            <td>`+ _endDate + `</td>
                                            <td>`+ results.Data[i].venue + `</td>
                                            <td>`+ results.Data[i].contactor_phone + `</td>
                                            <td><a href="/Home/EventDetail?id=`+ results.Data[i].event_id + `">Detail</a></td>
                                        </tr>`;
                        }
                    }
                }
            }
        });
    };

    function JoinEvent(e) {
        var x = $(e).attr("member-id");
        $.ajax({
            type: 'POST',
            url: '@Url.Action("JoinEvent", "Home")',
            data: JSON.stringify({ 'userId': x }),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (rs) {
                if (rs != null) {
                    var s = rs;
                    if (rs.Status == 1) {
                        alert("Join Event Successfully!!!");
                        location.reload();
                    } else {
                        alert("Fail");
                    }
                }
            }
        });
    }
</script>
