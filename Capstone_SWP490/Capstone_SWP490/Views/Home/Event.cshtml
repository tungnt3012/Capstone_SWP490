<script>

    function searchSelect() {
        var _formdate = $("#from-date").val();
        var _todate = $("#to-date").val();
        if (_formdate != '' && _todate != '') {
            if (_formdate > _todate) {
                $("#btn-search-event").attr("disabled", true);
                $("#error-select-search").html("*Start Date must be BEFORE End Date!!!");
            } else {
                $("#btn-search-event").attr("disabled", false);
                $("#error-select-search").html("");
            }
        }

    }


    function SearchEvent() {
        var fromdate = $("#from-date").val();
        var todate = $("#to-date").val();
        var vas = $("#userss").val();
        var role = $("#user_role").val();
        //alert("Searching " + fromdate + " To " + todate)

        let objectIn = {
            start_date: fromdate,
            end_date: todate
        };


        $.ajax({
            type: 'POST',
            url: '@Url.Action("SearchEvent", "Home")',
            data: JSON.stringify(objectIn),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (results) {
                if (results != null) {
                    document.getElementById("table-events").innerHTML = "";
                    if (vas != "" && role == 'ORGANIZER') {
                        for (let i = 0; i < results.Data.length; i++) {
                            let _startDate = new Date(+("" + results.Data[i].start_date).slice(6, 19)).toLocaleString('en-GB', { year: "numeric", day: "2-digit", month: "2-digit" }).split("/").join("-");
                            let _endDate = new Date(+("" + results.Data[i].end_date).slice(6, 19)).toLocaleString('en-GB', { year: "numeric", day: "2-digit", month: "2-digit" }).split("/").join("-");
                            document.getElementById("table-events").innerHTML += `
                                        <tr>
                                            <td class="date-table">`+ _startDate+`</td>
                                            <td class="date-table">`+ _endDate+`</td>
                                            <td class="venue-table">`+ results.Data[i].venue +`</td>
                                            <td class="title-table">`+ results.Data[i].title +`</td>
                                            <td class="action-table"><a href="/Home/EventEdit?id=`+ results.Data[i].event_id +`">Edit</a></td>
                                            <td class="action-table"><a href="/Home/EventDetail?id=`+ results.Data[i].event_id+`">Detail</a></td>
                                            <td class="action-table"><a href="/Home/EventDelete?id=`+ results.Data[i].event_id +`">Delete</a></td>
                                        </tr>`;
                        }
                    } else {
                        for (let i = 0; i < results.Data.length; i++) {
                            let _startDate = new Date(+("" + results.Data[i].start_date).slice(6, 19)).toLocaleString('en-GB', { year: "numeric", day: "2-digit", month: "2-digit" }).split("/").join("-");
                            let _endDate = new Date(+("" + results.Data[i].end_date).slice(6, 19)).toLocaleString('en-GB', { year: "numeric", day: "2-digit", month: "2-digit" }).split("/").join("-");
                            document.getElementById("table-events").innerHTML += `<tr>
                                            <td class="date-table">`+ _startDate + `</td>
                                            <td class="date-table">`+ _endDate + `</td>
                                            <td class="venue-table">`+ results.Data[i].venue + `</td>
                                            <td class="title-table">`+ results.Data[i].title + `</td>
                                            <td class="action-table"><a href="/Home/EventDetail?id=`+ results.Data[i].event_id + `">Detail</a></td>
                                        </tr>`;
                        }
                    }
                }
            }
        });
    };

    function JoinEvent(e) {
        var x = $(e).attr("member-id");
        $.ajax({
            type: 'POST',
            url: '@Url.Action("JoinEvent", "Home")',
            data: JSON.stringify({ 'userId': x }),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (rs) {
                if (rs != null) {
                    var s = rs;
                    if (rs.Status == 1) {
                        alert("Join Event Successfully!!!");
                        location.reload();
                    } else {
                        alert("Fail");
                    }
                }
            }
        });
    }
</script>
