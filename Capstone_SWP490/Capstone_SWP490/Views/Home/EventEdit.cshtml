@model Capstone_SWP490.Models.events_ViewModel.eventsViewModel
@{
    ViewBag.Title = "Event Upload";
}

<style>
    #menu-event {
        color: #ffffff !important;
        background: #30cf6b;
    }
</style>

<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">Event</label>
        </div>
    </div>
    <div class="main">
        <div class="column">
            <div class="col-lg-12">
                @using (Html.BeginForm("EventEdit", "Home"))
                {
                    <div class="column" style="padding-top:20px">
                        <div class="form-group">
                            <h5 style="color:red"> @ViewData["error"] </h5>
                            <h5 style="color:green"> @ViewData["success"] </h5>
                        </div>
                        <div class="form-group">
                            <label for="type-event">Choose a Type of Event:</label>
                            <div class="row">
                                <div class="col-lg-3">
                                    @*<select class="form-control col-lg-6" name="select-events" id="events">
                                            <option value="">Event</option>
                                            <option value="">Activate</option>
                                        </select>*@
                                    @Html.DropDownListFor(m => m.event_type, new List<SelectListItem>
                                      { new SelectListItem{Text="Please Select"},
                                        new SelectListItem{Text="Event", Value="1"},
                                        new SelectListItem{Text="Activities", Value="2"}})
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Title">Title</label>
                            @Html.TextBoxFor(m => m.title, new { @class = "form-control", id = "EventTitle", name = "Title", value = "", placeholder = "Title" })
                        </div>
                        <div class="form-group">
                            <label for="Desctiption">Desctiption</label>
                            @Html.TextAreaFor(m => m.desctiption, new { @class = "form-control", id = "EventDesctiption", name = "Desctiption", value = "", placeholder = "Description of the event" })
                        </div>
                        <div class="form-group">
                            <label for="Location">Start date</label>
                            @Html.TextBoxFor(m => m.start_date, new { type = "date", @class = "form-control", id = "EventStartDate", name = "EventStartDate", @Value = Model.start_date.ToString("yyyy-MM-dd"), placeholder = "Start date" })
                        </div>
                        <div class="form-group">
                            <label for="Location">End date</label>
                            @Html.TextBoxFor(m => m.end_date, new { type = "date", @class = "form-control", id = "EventEndDate", name = "EventEndDate", @Value = Model.end_date.ToString("yyyy-MM-dd"), placeholder = "End date" })
                        </div>
                        <div class="form-group">
                            <label for="Location">venue</label>
                            @Html.TextBoxFor(m => m.venue, new { @class = "form-control", id = "EventLocation", name = "TiLocationtle", value = "", placeholder = "Location" })
                        </div>
                        <div class="form-group">
                            <label for="ContactorPhone">Contactor phone</label>
                            @Html.TextBoxFor(m => m.contactor_phone, new { @class = "form-control", id = "EventContactorPhone", name = "ContactorPhone", value = "", placeholder = "ContactorPhone" })
                        </div>
                        <div class="form-group">
                            <label for="ContactorEmail">Contactor email</label>
                            @Html.TextBoxFor(m => m.contactor_email, new { @class = "form-control", id = "EventContactorEmail", name = "EventContactorEmail", value = "", placeholder = "ContactorEmail" })
                        </div>
                        <div class="form-group">
                            <label for="ContactorName">Contactor Name</label>
                            @Html.TextBoxFor(m => m.contactor_name, new { @class = "form-control", id = "EventContactorName", name = "EventContactorName", value = "", placeholder = "ContactorName" })
                        </div>
                        <div class="form-group">
                            <label for="Fanpage">Fanpage</label>
                            @Html.TextBoxFor(m => m.fan_page, new { @class = "form-control", id = "EventFanpage", name = "EventFanpage", value = "", placeholder = "Fanpage" })
                        </div>
                        <div class="form-group">
                            <label for="Fanpage">Note</label>
                            @Html.TextBoxFor(m => m.note, new { @class = "form-control", id = "EventNote", name = "EventNote", value = "", placeholder = "Note" })
                        </div>
                        @Html.TextBoxFor(m => m.event_id, new { @class = "hidden" })

                        <div class="form-group">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary" id="event-upload">Save</button>
                                <button type="button" class="btn btn-secondary" onclick="location.href='/Home/Event'; return false;" id="event-canner">Cancel</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>

</div>


