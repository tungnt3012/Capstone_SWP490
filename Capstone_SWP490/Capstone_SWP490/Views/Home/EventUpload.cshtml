
@{
    ViewBag.Title = "EventUpload";
}

<style>
    #menu-event {
        color: #ffffff !important;
        background: #30cf6b;
    }
</style>


<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">Event</label>
        </div>
    </div>
    <div class="main">
        <div class="column">
            <div class="col-lg-12">
                <form>
                    <div class="column">
                        <div class="col-lg-12" id="cars-shedule1">
                            <div class="form-group">
                                <label for="Title">Title</label>
                                <input type="text" class="form-control" id="EventTitle" name="Title" value="" aria-describedby="Title" placeholder="Title">
                            </div>
                            <div class="form-group">
                                <label for="Desctiption">Desctiption</label>
                                <textarea class="form-control" id="EventDesctiption" name="Desctiption" rows="4" placeholder="Description of the event"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="Location">Location</label>
                                <input type="text" class="form-control" id="EventLocation" name="TiLocationtle" value="" aria-describedby="Location" placeholder="Location">
                            </div>
                            <div class="form-group">
                                <label for="ContactorPhone">Contactor phone</label>
                                <input type="text" class="form-control" id="EventContactorPhone" name="ContactorPhone" value="" aria-describedby="ContactorPhone" placeholder="ContactorPhone">
                            </div>
                            <div class="form-group">
                                <label for="ContactorEmail">Contactor email</label>
                                <input type="email" class="form-control" id="EventContactorEmail" name="EventContactorEmail" value="" aria-describedby="EventContactorEmail" placeholder="ContactorEmail">
                            </div>
                            <div class="form-group">
                                <label for="ContactorName">Contactor Name</label>
                                <input type="text" class="form-control" id="EventContactorName" name="EventContactorName" value="" aria-describedby="EventContactorName" placeholder="ContactorName">
                            </div>
                            <div class="form-group">
                                <label for="Fanpage">Fanpage</label>
                                <input type="text" class="form-control" id="EventFanpage" name="EventFanpage" value="" aria-describedby="EventFanpage" placeholder="Fanpage">
                            </div>
                            <div class="form-group">
                                <button type="button" class="btn btn-secondary" id="event-canner">Canner</button>
                                <button type="button" class="btn btn-primary" id="event-upload">Upload</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>


