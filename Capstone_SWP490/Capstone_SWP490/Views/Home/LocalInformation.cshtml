<script>

    GetListContent();
    function GetListContent() {
        $.ajax({
            url: '@Url.Action("GetContentLocalInformation", "Home")',
            type: 'GET',
            success: function (results) {
                if (results != null) {
                    for (let i = 0; i < results.length; i++) {
                        console.log("" + results[i].content);
                        document.getElementById("page-content").innerHTML += `<div class="col-lg-6">
                                <div class="form-group">
                                    <h3>`+ results[i].title +`</h3>
                                    <div class="border border-danger">
                                        `+ results[i].content +`
                                    </div>
                                </div>
                            </div>`;
                    }
                }
            }
        });
    }
</script>
