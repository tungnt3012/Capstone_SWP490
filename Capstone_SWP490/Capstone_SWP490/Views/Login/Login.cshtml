@model Capstone_SWP490.app_user

@{
    Layout = "~/Views/Shared/_SigninLayout.cshtml";
    ViewBag.Title = "Login";
}

<div id="wrapper-home">
    <div class="back">
        <div class="div-center-chang">
            <div class="content">
                <div class="form-group">
                    <label for="exampleInputUserLogin" id="homeUserChangPassword">OLP ICPC Login Form</label>
                    </div>
                    @using (Html.BeginForm("Login", "Login"))
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.user_name, new { @class = "form-control", id = "exampleInputLoginUser", placeholder = "Username", required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.psw, new { @class = "form-control", id = "exampleInputLoginPassword", placeholder = "Password", required = "required" })
                            <span id="message2"> </span>
                        </div>
                        <div class="form-group">
                            <p style="color:red">
                                @ViewData["LoginError"]
                            </p>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" id="btnHomeLogin">Login</button>
                        </div>
                        <div class="form-group">
                            <div class="pull-right">
                                @Html.ActionLink("Forgot your password?", "ForgotPassword", "Login")
                            </div>
                        </div>
                    }
                </div>
            </div>
    </div>
</div>
<script>
    document.getElementById('exampleInputLoginPassword').onkeyup = function () {
        var password = $("#exampleInputLoginPassword").val();
      
        if (password.length < 6) {
            document.getElementById("message2").style.color = "Red";
            document.getElementById("message2").innerHTML = "*Password length must be more than 6 characters";
            document.getElementById("exampleInputLoginPassword").style.borderColor = "red";
        }
        else {
            document.getElementById("exampleInputLoginPassword").style.borderColor = "#66afe9";
            document.getElementById("message2").innerHTML = "";
        }
    }
    </script>