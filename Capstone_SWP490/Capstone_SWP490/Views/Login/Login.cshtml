@model Capstone_SWP490.app_user

@{
    Layout = "~/Views/Shared/_SigninLayout.cshtml";
    ViewBag.Title = "Login";
}

<div id="wrapper-home">
    <div class="back">
        <div class="div-center">
            <div class="content">
                <label for="exampleInputUserLogin" id="homeUserLogin">OLP ICPC Login Form</label>

                @using (Html.BeginForm("Login", "Login"))
                {
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.user_name, new { @class = "form-control", id = "exampleInputLoginUser", placeholder = "Username" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(x => x.psw, new { @class = "form-control", id = "exampleInputLoginPassword", placeholder = "Password" })
                    </div>
                    <div class="form-group">
                        <p style="color:red">
                            @ViewData["LoginError"]
                        </p>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" id="btnHomeLogin">Login</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
