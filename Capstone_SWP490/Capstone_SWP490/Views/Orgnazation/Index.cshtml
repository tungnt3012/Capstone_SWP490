@model Capstone_SWP490.Models.organization_ViewModel.organization_ListViewModel
@{ ViewBag.Title = "Organizer";
}

<style>
    #menu_Coach {
        color: #ffffff !important;
        background: #30cf6b;
    }
</style>

<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">New Registration</label>
        </div>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1" id="under">
                <div class="row">
                    <div class="col-lg-12">
                        <div style="font-size: 22px; padding-bottom:10px">
                            ><a href="@Url.Action("CoachAccount", "Orgnazation")">Coach Management</a>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                @if (Model == null || Model.data.Count == 0)
                                {
                                    <br />
                                    <label>No new registration now !</label>
                                }
                                else
                                {
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                @using (Html.BeginForm("Index", "Orgnazation", FormMethod.Get))
                                                {
                                                    @Html.TextBoxFor(x => x.keyword, new { @class = "form-control", placeholder = "Enter Name/Email" })
                                                    <button style="margin-top: 10px">Search</button>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12" style="overflow:auto;">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">Full Name</th>
                                                        <th scope="col">Account Name</th>
                                                        <th scope="col">Phone(Coach)</th>
                                                        <th scope="col">School Name</th>
                                                        <th scope="col">Institution Name</th>
                                                        <th scope="col">Phone(school)</th>
                                                        <th scope="col"></th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @foreach (var item in Model.data)
                                                    {
                                                        <tr>
                                                            <td>@(item.full_name)</td>
                                                            <td>@(item.email)</td>
                                                            <td>@(item.coach_phone)</td>
                                                            <td>@(item.school_name)</td>
                                                            <td>@(item.institution_name)</td>
                                                            <td>@(item.school_phone)</td>
                                                            <td>
                                                                @if (item.status == true)
                                                                {
                                                                    <a href="@Url.Action("disable", "Orgnazation")?user_id=@item.coach_id">Accept</a>
                                                                }
                                                                else
                                                                {
                                                                    <a href="@Url.Action("enable", "Orgnazation")?user_id=@item.coach_id">Reject</a>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<form id="changeTeam" method="GET" action="@Url.Action("Result", "Registration")">
    <input id="teamIdRaw" type="hidden" value="0" name="team" />
</form>
<script>

    function onChanngeDropDown() {
        var selected = document.getElementById("team").value;
        document.getElementById("teamIdRaw").value = selected;
        document.getElementById("changeTeam").submit();
    }
    $(document).ready(function () {
        $("#newModal").modal("show");
        $("#newModal").on('hide.bs.modal', function () {

        });
        $("#newModal").on('hidden.bs.modal', function () {

        });
    });
    document.getElementById("registration_importdata-cancel").addEventListener('click', function () {
         window.location.href ="@Url.Action("Index", "Registration")";
    });
</script>
