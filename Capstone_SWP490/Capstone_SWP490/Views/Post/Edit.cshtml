@model Capstone_SWP490.Models.post_ViewModel.post_ViewModel
@{ ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.ckeditor.com/ckeditor5/32.0.0/classic/ckeditor.js"></script>
<!-- Sidebar -->

<header>
    <style>
        #menu-registration {
            color: #ffffff !important;
            background: #30cf6b;
        }

        .ck-editor__editable {
            min-height: 250px;
        }
    </style>
</header>

<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">Post | Edit</label>
        </div>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-lg-12">
                @using (Html.BeginForm(Model.action, "Post", FormMethod.Post))
                {<br />
                    <div class="row">
                        @Html.TextBoxFor(x => x.post.post_id, new { @class = "form-control", type = "hidden" })
                        <label style="color:red"> @ViewData["EDIT_ERROR"]</label>
                        <br />
                        <div class="col-lg-6" style="overflow:auto">
                            <label for="firstName">Schedule Date (For Schedule Only):</label><br />
                            @Html.TextBoxFor(x => x.post.schedule_date, new { @class = "form-control", type = "datetime-local" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-6" style="overflow:auto">
                            <label for="firstName">Post To  Fan page:</label>
                            &nbsp;<input type="checkbox" name="postToFanPage" @(Model != null && Model.action == "Edit" && Model.post.post_to != null && Model.post.post_to.Contains("FANPAGE") ? "checked" : "") />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-12" style="overflow:auto">
                            <label for="firstName">Title:</label><br />
                            @Html.TextBoxFor(x => x.post.title, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12" style="overflow:auto">
                            <label for="firstName">Short Description:</label><br />
                            @Html.TextAreaFor(x => x.post.short_description, new { @class = "form-control", @rows = 3 })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12" style="overflow:auto">
                            <label for="firstName">Content:</label><br />
                            @Html.TextAreaFor(x => x.post.html_content, new { id = "editor", @rows = 4 })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-12" style="overflow:auto">
                            <button>Save</button>
                            <button>Schedule</button>
                            <a>cancel</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@if (Model != null && Model.errors != null && Model.errors.Count > 0)
{

    <div class="col-lg-6">
        <!-- Modal -->
        <div class="modal fade" id="newModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
    $(document).ready(function () {
        $("#newModal").modal("show");
        $("#newModal").on('hide.bs.modal', function () {

        });
        $("#newModal").on('hidden.bs.modal', function () {

        });
    });
</script>
