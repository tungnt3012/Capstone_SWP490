@model Capstone_SWP490.Models.post_ViewModel.postList_ViewModel
@{ ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int stt = 1;
}

<!-- Sidebar -->

<header>
    <style>
        #menu_Post {
            color: #ffffff !important;
            background: #30cf6b;
        }
    </style>
</header>

<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">Posts</label>
        </div>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1" id="under">
                <br />
                @*<a href="@Url.Action("Create", "Post")" style="text-decoration:underline">ADD NEW</a>*@
                <div class="row">
                    <div class="col-lg-12">
                        @*<a href="@Url.Action("Create", "Post")" style="text-decoration:underline">ADD NEW</a>*@
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Filter By:</label>
                                    <select class="form-control" id="selectStatus">
                                        <option value="all" @(Model.status != null && Model.status != "postsed" && Model.status != "scheduling" ? "selected" : "")>All</option>
                                        <option value="postsed" @(Model.status != null && Model.status == "posted" ? "selected" : "")>Posted</option>
                                        <option value="scheduling" @(Model.status != null && Model.status == "scheduling" ? "selected" : "")>Scheduling</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group pull-right">
                                    <button type="button" onclick="window.location.href='/Post/Create'" class="btn btn-success add-post">Add New</button>
                                </div>

                            </div>

                            <div class="col-lg-12" style="overflow:auto">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col" width="2%">No</th>
                                            <th scope="col" width="15%">Title</th>
                                            <th scope="col" width="20%">Short Description</th>
                                            <th scope="col" width="10%">Create Date</th>
                                            <th scope="col" width="10%">Post Date</th>
                                            <th scope="col" width="5%">Featured</th>
                                            <th scope="col" width="5%">Schedule/Time Remaining</th>
                                            <th scope="col" width="5%">Posted</th>
                                            <th scope="col" width="10%"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.posts)
                                        {
                                            <tr>
                                                <td>@(stt)</td>
                                                <td>@(item.title)</td>
                                                <td>@(item.short_description)</td>
                                                <td>@(item.insert_date)</td>
                                                <td>@(item.enabled == true ? item.update_date : "N/A")</td>
                                                <td>@(item.featured.Value)</td>
                                                <td>
                                                    @(Model.calDate(item.schedule_date) == "" ?  "N/A" : Model.calDate(item.schedule_date))
                                                </td>
                                                <td>@(item.enabled)</td>
                                                <td>

                                                    @if (item.enabled == true)
                                                    {
                                                        <a href="@Url.Action("Disable", "Post")?id=@item.post_id">Disable</a>
                                                    }
                                                    else
                                                    {
                                                        <a href="@Url.Action("Enable")?id=@item.post_id">RePost</a>
                                                    }
                                                    @("|")
                                                    <a href="@Url.Action("Edit", "Post")?id=@item.post_id">Edit</a>
                                                    |
                                                    <a onclick="AjaxPinPost(this)" post-id="@item.post_id">Pin</a>
                                                    |
                                                    <a onclick="return confirmRemove();" href="@Url.Action("Remove", "Post")?post_id=@item.post_id" style="color: red">Remove</a>
                                                    @if (item.isPin == 1)
                                                    {
                                                        @("|") <label style="color:green">Pined</label>
                                                    }
                                                </td>
                                            </tr>
                                            { stt += 1; }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("", "Post", FormMethod.Get, new { id = "form" }))
{
    <input type="hidden" name="status" id="status" />
}
<script>
    $(document).ready(function () {
        $("#newModal").modal("show");
        $("#newModal").on('hide.bs.modal', function () {

        });
        $("#newModal").on('hidden.bs.modal', function () {

        });
    });

        function acceptSchool(id) {
            window.location.href = "@Url.Action("AcceptSchool", "Registration")?id=" + id;
    }

    $('#selectStatus').change(function () {
        document.getElementById('status').value = $(this).val();
        $('#form').submit();
    });

    function confirmRemove() {
        if (confirm("Continue delete post?") == true)
            return true;
        return false;
    }


    function AjaxPinPost(e) {

        if (confirm("PIN this Post ???") == true) {
            var _post_id = e.getAttribute("post-id");
            console.log("id= " + _post_id);

            $.ajax({
                type: 'POST',
                url: '@Url.Action("PinPost", "Post")?postId=' + _post_id + '',
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (rs) {
                    var s = rs;
                    if (rs.Status == 1) {
                        alert("Pin Post Successfull");
                        location.reload();
                    } else {
                        alert("Pin Post Failed!!!");
                    }
                }
            });
        }
    }

</script>


