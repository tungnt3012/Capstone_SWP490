@{ ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int stt = 1;
    }

<!-- Sidebar -->

<header>
    <style>
        #menu-registration {
            color: #ffffff !important;
            background: #30cf6b;
        }
    </style>
</header>
<div id="page-content-wrapper">
    <div class="container-fluid xyz">
        <div class="col-lg-12" id="content_area2_header">
            <div class="col-lg-12" id="content_area2_title">
                <label for="exampleInputTitle">Registration</label>
            </div>
        </div>
        <div class="main">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">

                        <div class="col-lg-6" id="btn-registrantionTitle-index">
                            @using (Html.BeginForm("Result", "Registration", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <label for="formFile" class="form-label">
                                    - Default file input <a href="#">example </a><br />
                                    - Visit @Html.ActionLink("Registration Guide", "Guide", "Registration") for more detail
                                </label>
                                <br>
                                <input class="form-control" type="file" id="file" name="file" accept=".xlsx, .xls, .csv">
                                <button class="btn btn-primary" value="Upload" id="registration_upload">Upload</button>}
                        </div>
                        <div class="col-lg-6">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            >IMPORT HISTORY:
                        </div>
                        <div class="col-lg-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col" style="width:5%">No</th>
                                        <th scope="col" style="width:15%">Name</th>
                                        <th scope="col" style="width:15%">Short Name</th>
                                        <th>Insert Date</th>
                                        <th>Update Date</th>
                                        <th scope="col" style="width:25%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.school != null && Model.school.Count > 0)
                                    {

                                        foreach (var item in Model.school)
                                        {
                                    <tr>
                                        <th scope="row">@stt</th>
                                        <td>@item.school_name</td>
                                        <td>@item.short_name</td>
                                        <td>@item.insert_date</td>
                                        <td>@item.update_date</td>
                                        <td>
                                            @if (item.active != null && item.active)
                                            {
                                                <label style="color: green">IN USE</label>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-success" id="btn-enable">Accept </button>
                                            }

                                            | <a href="@Url.Action("history", "Registration")?school_id=@item.school_id">Detail</a>
                                            |  <a href="@Url.Action("history", "Registration")?school_id=@item.school_id">Remove</a>


                                        </td>

                                    </tr>
                                            { stt += 1;}
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.insert_result != null && Model.insert_result.Count > 0)
                        {

                            <div class="col-lg-6">
                                <!-- Modal -->
                                <div class="modal fade" id="newModal" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">

                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <table class="table table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">Object</th>
                                                            <th scope="col">Message</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var error in Model.insert_result)
                                                        {
                                                            <tr>
                                                                <th scope="row">@error.objectName</th>
                                                                <td>@error.msg</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="page-footer font-small blue pt-4" id="footer">

        <!-- Footer Links -->
        <div class="container-fluid text-center text-md-left">

            <!-- Grid row -->
            <div class="row" id="footer-main">
