
@{
    ViewBag.Title = "Registration | Coach";
}

<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">Registration</label>
        </div>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-lg-12" id="registration-memberdetail">

                <input type="hidden" name="teamId" value="" />
                <input type="hidden" name="id" value="" />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="firstName">Full name</label>
                            <input type="text" class="form-control" id="Fullname" name="Fullname" value="" aria-describedby="Full name" placeholder="Full name">
                        </div>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" name="email" value="" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="phone">Phone number</label>
                            <input type="number" class="form-control" id="exampleInputPhone" name="phone" value="" aria-describedby="Phone" placeholder="Phone">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="email">School name</label>
                            <input type="text" class="form-control" id="exampleInputSchoolname" name="Schoolname" value="" placeholder="School name">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="phone">Short name</label>
                            <input type="text" class="form-control" id="exampleInputShortname" name="Shortname" value="" aria-describedby="Short name" placeholder="Short name">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="email">Address</label>
                            <input type="text" class="form-control" id="exampleInputAddress" name="Address" value="" placeholder="Address">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="email">Type: </label>
                            <select name="cars" id="cars" style="height: 30px; border-radius: 5px; ">
                                <option value="University">University</option>
                                <option value="Colleges">Colleges</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='/Home'" style="color:#000000;">Cancel</button>
                </div>
            </div>
        </div>
    </div>

</div>



