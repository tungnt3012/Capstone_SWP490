@{ ViewBag.Title = "Registration";

}

<style>
    #menu-registration {
        color: #ffffff !important;
        background: #30cf6b;
    }

</style>

<div id="page-content-wrapper">
    <div class="container-fluid xyz">
        <div class="col-lg-12" id="content_area2_header">
            <div class="col-lg-12" id="content_area2_title">
                <label for="exampleInputTitle">Confirm Upload</label>
            </div>
        </div>
        <div class="main">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <br />
                            <div class="row">
                                <div class="col-lg-12">
                                    <br />
                                    <div class="row">
                                        @if (ViewData["IMPORT_ERROR"] != null)
                                        {
                                            @ViewData["IMPORT_ERROR"];
                                           }
                                        else if (Model != null)
                                        {
                                            using (Html.BeginForm("InsertMember", "Registration", FormMethod.Post))
                                            {
                                                <div class="col-lg-12">
                                                    <div class="col-lg-6">
                                                        <button class="btn btn-primary" id="registration_importdata">Save</button>
                                                    </div>
                                                    <div class="col-lg-6">
                                                    </div>
                                                </div>
                                            }

                                            <div class="col-lg-12">
                                                <div class="col-lg-6">
                                                    <label for="formFile" class="form-label">School: </label>: <span style="color: @(Model.school.school_name == "" ? "red" : "black")">@(Model.school.school_name == "" ? "N/A" : Model.school.school_name)</span>
                                                </div>
                                                <div class="col-lg-6"></div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="col-lg-6">
                                                    <label for="formFile" class="form-label">Short Name: </label>: <span style="color: @(Model.school.short_name == "" ? "red" : "black")">@(Model.school.short_name == "" ? "N/A" : Model.school.short_name)</span>
                                                </div>
                                                <div class="col-lg-6"></div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="col-lg-6">
                                                    <label for="formFile" class="form-label">Type: </label>: <span style="color: @(Model.school.type == "" ? "red" : "black")">@(Model.school.type == "" ? "N/A" : Model.school.type)</span>
                                                </div>
                                                <div class="col-lg-6"></div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="col-lg-6">
                                                    <label for="formFile" class="form-label">Address: </label> <span style="color: @(Model.school.address == "" ? "red" : "black")">@(Model.school.address == "" ? "N/A" : Model.school.address)</span>
                                                </div>
                                                <div class="col-lg-6">
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="col-lg-6"><label for="formFile" class="form-label">Coach: </label> @(Model.coach.first_name + " " + Model.coach.middle_name + " " + Model.coach.last_name) - <label for="formFile" class="form-label">Email: </label> @Model.coach.email - <label for="formFile" class="form-label">Phone: </label> @Model.coach.phone_number</div>
                                                <div class="col-lg-6">
                                                </div>
                                            </div>
                                            <div class="col-lg-12">

                                                <div class="col-lg-6"><label for="formFile" class="form-label">Vice Coach: </label> @(Model.vice_coach.first_name + " " + Model.vice_coach.middle_name + " " + Model.vice_coach.last_name) - <label for="formFile" class="form-label">Email: </label> @Model.vice_coach.email - <label for="formFile" class="form-label">Phone: </label> @Model.vice_coach.phone_number</div>
                                                <div class="col-lg-6"></div>
                                            </div>

                                            <br><br />
                                            <div class="col-lg-12">
                                                <div class="col-lg-6">
                                                   <label style="font-size: 15px">Select Team:</label> <select name="team" id="team" onchange="onChanngeDropDown()" style="width: 50%; height: 25px; font-size: 18px">
                                                        @foreach (var team in Model.school.teams)
                                                        {
                                                            <option style="font-size:18px" value="@team.team_id" @(team.team_id == Model.displayTeam.team_id ? "selected" : "")>@team.team_name</option>
                                                        }
                                                    </select>
                                                </div>
                                                <div class="col-lg-6">
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <table class="table table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">First name</th>
                                                            <th scope="col">middle name</th>
                                                            <th scope="col">Last name</th>
                                                            <th scope="col">Date of birth</th>
                                                            <th scope="col">email</th>
                                                            <th scope="col">phone number</th>
                                                            <th scope="col">ICPC ID</th>
                                                            <th scope="col">Gender</th>
                                                            <th scope="col">Year</th>
                                                            <th scope="col">Award</th>
                                                            <th scope="col">member role</th>
                                                            <th scope="col"></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.displayTeam.team_member)
                                                        {
                                                            <tr>
                                                                <td style="color : @(item.member.first_name == "" ? "red" : "black")">@(item.member.first_name == "" ? "N/A" : item.member.first_name)</td>
                                                                <td>@(item.member.middle_name == "" ? "N/A" : item.member.middle_name)</td>
                                                                <td style="color: @(item.member.last_name == "" ? "red" : "black")">@(item.member.last_name == "" ? "N/A" : item.member.last_name)</td>
                                                                <td style="color: @(item.member.dob == new DateTime() ? "red" : "black")">@(item.member.dob == new DateTime() ? "N/A" : (item.member.dob.Year +"-" + (item.member.dob.Month < 10 ? "0" + item.member.dob.Month : item.member.dob.Month) + "-"+ (item.member.dob.Day < 10 ? "0" + item.member.dob.Day : item.member.dob.Day)))</td>
                                                                <td style="color: @(item.member.email == "" ? "red" : "black" )">@(item.member.email == "" ? "N/A" : item.member.email)</td>
                                                                <td>@(item.member.phone_number == "" ? "N/A" : item.member.phone_number) </td>
                                                                <td style="color: @(item.member.icpc_id == -1 ? "red" : "black")">@(item.member.icpc_id == -1 ? "N/A" : item.member.icpc_id)</td>
                                                                <td>@(item.member.gender == 0 ? "Male" : "Female")</td>
                                                                <td style="color: @(item.member.year == 0 ? "red" : "black" )">@(item.member.year == 0 ? "N/A" : item.member.year)</td>
                                                                <td>@(item.member.award == "" ? "N/A" : "")</td>
                                                                <td>@(item.member.member_role == 3 ? "Leader" : "Member" )</td>
                                                                <td><a href="@Url.Action("MemberDetail", "Registration")?id=@item.member.member_id&teamId=@item.team.team_id">Detail</a> </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>}
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
