@{ ViewBag.Title = "Registration | Result";
}

<style>
    #menu_Registration {
        color: #ffffff !important;
        background: #30cf6b;
    }
</style>

<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle"> @((Model == null || (Model.source != null && Model.source == "IMPORT")) ? "Import Result" : Model.source == "VIEW" ? "Detail for history import" : ""  )</label>
        </div>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1" id="under">
                <div class="row">
                    <div class="col-lg-12">
                        <br />
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    @if (Model == null)
                                    {
                                        @ViewData["READ_FILE_ERROR"]
                                        <br>@(">>")
                                        <a href="@Url.Action("", "Registration")">BACK</a>
                                    }
                                    else
                                    {
                                        using (Html.BeginForm(Model.source == "IMPORT" ? "InsertMember" : "SaveChange", "Registration", FormMethod.Post))
                                        {
                                            <div class="col-lg-12">
                                                <div class="col-lg-6">
                                                    <label style="color:red">*Note: Please check detail carefully, Values in red is required</label>
                                                    <br />
                                                    @if (Model.school.teams.Count != 0)
                                                    {
                                                        <button class="btn btn-primary" id="registration_importdata">@(Model.source == "VIEW" ? "Save Changes" : "Save")</button>
                                                        <button type="reset" class="btn btn-secondary" id="registration_importdata-cancel">Cancel</button>
                                                        <a style="padding: 6px 12px;margin:auto;text-decoration:underline;cursor:pointer;font-size:20px" data-toggle="modal" data-target="#newModal">Current Import Error</a>
                                                    }
                                                    else
                                                    {
                                                        <a href="@Url.Action("", "Registration")">BACK</a>
                                                    }
                                                </div>
                                            </div>
                                        }
                                        if (Model.school.teams.Count >= 1)
                                        {
                                            <div class="col-lg-12">
                                                <div class="col-lg-6">
                                                    <label for="formFile" class="form-label">School: </label>: <span style="color: @(Model.school.school_name == "" ? "red" : "black")">@(Model.school.school_name == "" ? "N/A" : Model.school.school_name)</span>
                                                </div>
                                                <div class="col-lg-6"></div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="col-lg-6">
                                                    <label for="formFile" class="form-label">Short Name: </label>: <span style="color: @(Model.school.institution_name == "" ? "red" : "black")">@(Model.school.institution_name == "" ? "N/A" : Model.school.institution_name)</span>
                                                </div>
                                                <div class="col-lg-6"></div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="col-lg-6">
                                                    <label for="formFile" class="form-label">Address: </label> <span style="color: @(Model.school.address == "" ? "red" : "black")">@(Model.school.address == "" ? "N/A" : Model.school.address)</span>
                                                </div>
                                                <div class="col-lg-6">
                                                </div>
                                            </div>
                                            if (Model.coach != null)
                                            {
                                                <div class="col-lg-12">
                                                    <div class="col-lg-6"><label for="formFile" class="form-label">Coach: </label> @(Model.coach.first_name + " " + Model.coach.middle_name + " " + Model.coach.last_name) - <label for="formFile" class="form-label">Email: </label> @Model.coach.email - <label for="formFile" class="form-label">Phone: </label> @Model.coach.phone_number</div>
                                                    <div class="col-lg-6">
                                                    </div>
                                                </div>
                                            }
                                            if (Model.vice_coach != null)
                                            {
                                                <div class="col-lg-12">

                                                    <div class="col-lg-6"><label for="formFile" class="form-label">Vice Coach: </label> @(Model.vice_coach.first_name + " " + Model.vice_coach.middle_name + " " + Model.vice_coach.last_name) - <label for="formFile" class="form-label">Email: </label> @Model.vice_coach.email - <label for="formFile" class="form-label">Phone: </label> @Model.vice_coach.phone_number</div>
                                                    <div class="col-lg-6"></div>
                                                </div>
                                            }
                                            <br><br />
                                            <div class="col-lg-12" style="overflow:auto;">
                                                <table class="table table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">Team Name</th>
                                                            <th scope="col">Contest Name</th>
                                                            <th scope="col">Number of Member</th>
                                                            <th scope="col"></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        @foreach (var item in Model.school.teams)
                                                        {
                                                            if (item.enabled == true)
                                                            {
                                                                <tr>
                                                                    <td>@(item.team_name)</td>
                                                                    <td>@(item.contest.contest_name + "(" + item.contest.code + ")")</td>
                                                                    @{
                                                                        var count = 0;
                                                                        foreach (var memberCount in item.team_member)
                                                                        {
                                                                            if (memberCount.member.enabled == true)
                                                                            {
                                                                                count += 1;
                                                                            }
                                                                        }
                                                                    }
                                                                    <td>@(count)</td>
                                                                    <td>
                                                                        <a href="@Url.Action("TeamDetail", "Registration")?id=@item.team_id">Detail</a> |
                                                                        <a style="color:red" href="@Url.Action("RemoveTeam", "Registration")?id=@item.team_id">Remove</a>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>}
                                    }
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Error model -->
@if (Model != null && Model.error != null && Model.error.Count > 0)
{
    <div class="col-lg-6">
        <!-- Modal -->
        <div class="modal fade" id="newModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Registration Error</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Sheet</th>
                                    <th scope="col">Message</th>
                                    <th scope="col">Position</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var error in Model.error)
                                {
                                    <tr>
                                        <th scope="row">@error.parentObject</th>
                                        <td>@Html.Raw(System.Web.HttpUtility.HtmlEncode(@error.msg).Replace("\n", "<br/>"))</td>
                                        <td>@error.occur_position</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="color:#000000">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<form id="changeTeam" method="GET" action="@Url.Action("Result", "Registration")">
    <input id="teamIdRaw" type="hidden" value="0" name="team" />
</form>
<script>

    function onChanngeDropDown() {
        var selected = document.getElementById("team").value;
        document.getElementById("teamIdRaw").value = selected;
        document.getElementById("changeTeam").submit();
    }
    $(document).ready(function () {
        $("#newModal").modal("show");
        $("#newModal").on('hide.bs.modal', function () {

        });
        $("#newModal").on('hidden.bs.modal', function () {

        });
    });
    document.getElementById("registration_importdata-cancel").addEventListener('click', function () {
         window.location.href ="@Url.Action("Index", "Registration")";
    });
</script>
