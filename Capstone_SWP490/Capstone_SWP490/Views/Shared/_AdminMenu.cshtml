<script>
    GetListContent();
    function GetListContent() {
        console.log("get begin");
        $.ajax({
            type: 'GET',
            url: '@Url.Action("GetAdminMenu", "Home")',
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (results) {
                document.getElementById("menu-content").innerHTML = "";
                if (results != null) {
                    for (let i = 0; i < results.length; i++) {
                        document.getElementById("menu-content").innerHTML += `<li id= menu_` + results[i].title_menu_name +`>
            <a href="`+ results[i].title_menu_link + `">
                `+ results[i].content + `
            </a>
        </li>`;
                    }
                    console.log("get Done");
                }
            }
        });
    };

</script>