@model  Capstone_SWP490.Models.statisticViewModel.statistic_index_ViewModel
@{
    ViewBag.Title = "Detail School";
}

<style>
    #menu_Overview {
        color: #ffffff !important;
        background: #30cf6b;
    }

    table.dataTable thead .sorting:after,
    table.dataTable thead .sorting:before,
    table.dataTable thead .sorting_asc:after,
    table.dataTable thead .sorting_asc:before,
    table.dataTable thead .sorting_asc_disabled:after,
    table.dataTable thead .sorting_asc_disabled:before,
    table.dataTable thead .sorting_desc:after,
    table.dataTable thead .sorting_desc:before,
    table.dataTable thead .sorting_desc_disabled:after,
    table.dataTable thead .sorting_desc_disabled:before {
        bottom: .5em;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">Detail School</label>
        </div>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1" id="under">
                <section>
                    <div class="form-group" style="padding-left:15px">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li role="presentation" class="nav-item active">
                                <a href="#step1" class="nav-link front-size-title active" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">Detail School</a>
                            </li>

                        </ul>
                    </div>
                    <form role="form">
                        <div class="tab-content">
                            <div class="tab-pane active" role="tabpanel" id="step1">
                                <div class="col-lg-12">
                                    <label class="border border-danger" for="Event_Schedule">
                                        ><span style="text-decoration:underline"> School Informations</span>
                                    </label>
                                    <br>
                                </div>
                                <div class="col-lg-12" id="under" style="border-bottom: 1px solid gray">
                                    <table class="table table-striped table-bordered table-sm" width="100%">
                                        <thead>
                                            <tr>
                                                <th scope="col" width="10%">School name</th>
                                                <th scope="col" width="10%">Institution name</th>
                                                <th scope="col" width="15%">Address</th>
                                                @*<th scope="col" width="7%">Insert date</th>
                                                    <th scope="col" width="7%">Update date</th>*@
                                                <th scope="col" width="8%">Website</th>
                                                <th scope="col" width="4%">Phone number</th>
                                            </tr>
                                        </thead>
                                        <tbody id="table-contests">
                                            @if (Model.detail_school != null)
                                            {
                                                <tr>
                                                    <td class="date-table">@(Model.detail_school.school_name??"N/A")</td>
                                                    <td class="venue-table">@(Model.detail_school.institution_name??"N/A")</td>
                                                    <td class="venue-table">@(Model.detail_school.address ?? "N/A")</td>
                                                    @*<td class="venue-table">2/18/2022 3:03:54 AM</td>
                                                        <td class="venue-table">2/18/2022 3:03:54 AM</td>*@
                                                    <td class="venue-table">@(Model.detail_school.website ?? "N/A")</td>
                                                    <td class="venue-table">@(Model.detail_school.phone_number ?? "N/A")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.detail_school != null)
                                {
                                    foreach (var item in Model.detail_school.teams)
                                    {
                            <div class="col-lg-12" id="under" style="border-bottom: 1px solid gray">
                                <label>- Team Name: <span style="color: #2fa9fb">@(item.team_name)</span></label><br>
                                <label>- Team Contest: <span style="color: #2fa9fb"> @(item.contest.contest_name + "(" + item.contest.code + ")") </span></label><br>
                                <label>- Total Member:  <span style="color: #2fa9fb"> @(item.team_member.Count) </span></label>
                                <table class="table table-striped table-bordered table-sm" width="100%">
                                    <thead>
                                        <tr>
                                            <th scope="col" width="2%">No</th>
                                            <th scope="col" width="10%">Member name</th>
                                            <th scope="col" width="8%">DOB</th>
                                            <th scope="col" width="12%">Email</th>
                                            <th scope="col" width="10%">Phone number</th>
                                            <th scope="col" width="6%">ICPC ID</th>
                                            <th scope="col" width="7%">Gender</th>
                                            <th scope="col" width="7%">Year</th>
                                            <th scope="col" width="7%">Award</th>
                                            <th scope="col" width="10%">Member role</th>
                                        </tr>
                                    </thead>
                                    @{int count = 0;}
                                    <tbody id="table-contests">
                                        @foreach (var member in item.team_member)
                                        {
                                        <tr>
                                            <td class="date-table">@(++count +"")</td>
                                            <td class="date-table">@((member.member.first_name + " " + member.member.middle_name + member.member.last_name)??"N/A")</td>
                                            <td style="color: @(member.member.dob == new DateTime() ? "red" : "black")">@(member.member.dob == new DateTime() ? "N/A" : (member.member.dob.Year + "-" + (member.member.dob.Month < 10 ? "0" + member.member.dob.Month : member.member.dob.Month+"") + "-" + (member.member.dob.Day < 10 ? "0" + member.member.dob.Day : member.member.dob.Day+"")))</td>
                                            <td style="color: @(member.member.email == "" ? "red" : "black" )">@(member.member.email == "" ? "N/A" : member.member.email)</td>
                                            <td style="color: @(member.member.phone_number == "" ? "red" : "black" )">@(member.member.phone_number == "" ? "N/A" : member.member.phone_number) </td>
                                            <td style="color: @(member.member.icpc_id == null ? "red" : "black")">@(member.member.icpc_id == null ? "N/A" : member.member.icpc_id+"")</td>
                                            <td>@(member.member.gender == 0 ? "Male" : "Female")</td>
                                            <td style="color: @(member.member.year == -1 ? "red" : "black" )">@(member.member.year == -1 ? "N/A" : member.member.year+"")</td>
                                            <td>@(member.member.award == null || member.member.award == "" ? "N/A" : member.member.award)</td>
                                            <td>@(member.member.member_role == 3 ? "Team Leader" :"Member")</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                                    }
                                }

                                <div class="col-lg-12">
                                    <div class="pull-right">
                                        <button type="button" id="btn-cancel-event" onclick="window.location.href = '/Statistic'" class="btn btn-secondary">Back</button>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Reason/Note</h4>
            </div>
            @using (Html.BeginForm("RegistrationAction", "Statistic", FormMethod.Get, new { id = "reject-form" }))
            {
                <div class="modal-body">
                    <input id="schoolId" type="hidden" name="schoolId" />
                    <input id="action" type="hidden" name="type" value="1" />
                    <textarea id="reason-text" class="form-control" name="note" required></textarea>
                </div>
                <div class="modal-footer">
                    <button id="submit-reject" type="button" class="btn btn-primary" data-dismiss="modal">Submit</button>
                    <button id="reset-reject" style="color:black" type="reset" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            }
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $("#newModal").modal("show");
        $("#newModal").on('hide.bs.modal', function () {

        });
        $("#newModal").on('hidden.bs.modal', function () {

        });
        $('#dtBasicExampleEvents').DataTable();
        $('.dataTables_length').addClass('bs-select');

        $('#dtBasicExample').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });

    document.getElementById("reset-reject").addEventListener('click', function () {
        document.getElementById("reason-text").value = "";
        document.getElementById("schoolId").value = "";
        document.getElementById("action").value = "";
    });
    document.getElementById("submit-reject").addEventListener('click', function () {
        var isEmtyReason = document.getElementById("reason-text").value == '';
        if (!isEmtyReason) {
            document.getElementById("reject-form").submit();
        } else {
            alert("Reason cannot be empty");
        }
    });
    function triggerSubmit(id, action) {
        document.getElementById("schoolId").value = id;
        document.getElementById("action").value = action;
    }
</script>


