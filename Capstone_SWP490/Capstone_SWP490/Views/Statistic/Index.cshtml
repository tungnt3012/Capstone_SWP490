@model  Capstone_SWP490.Models.statisticViewModel.statistic_index_ViewModel
@{
    ViewBag.Title = "Overview";
}

<style>
    #menu_Overview {
        color: #ffffff !important;
        background: #30cf6b;
    }

    table.dataTable thead .sorting:after,
    table.dataTable thead .sorting:before,
    table.dataTable thead .sorting_asc:after,
    table.dataTable thead .sorting_asc:before,
    table.dataTable thead .sorting_asc_disabled:after,
    table.dataTable thead .sorting_asc_disabled:before,
    table.dataTable thead .sorting_desc:after,
    table.dataTable thead .sorting_desc:before,
    table.dataTable thead .sorting_desc_disabled:after,
    table.dataTable thead .sorting_desc_disabled:before {
        bottom: .5em;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">Overview</label>
        </div>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1" id="under">
                <section>
                    <div class="form-group" style="padding-left:15px">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li role="presentation" class="nav-item active">
                                <a href="#step1" class="nav-link front-size-title active" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">Registration</a>
                            </li>
                            <li role="presentation" class="nav-item">
                                <a href="#step2" class="nav-link front-size-title active" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
                                    Event
                                </a>
                            </li>
                            <li role="presentation" class="nav-item">
                                <a href="#step3" class="nav-link front-size-title active" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
                                    Shirt Sizing
                                </a>
                            </li>
                        </ul>
                    </div>
                    <form role="form">
                        <div class="tab-content">
                            <div class="tab-pane active" role="tabpanel" id="step1">
                                <div class="col-lg-12">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Registered schools: @(Model.total_registered_school) <a style="text-decoration: underline" onclick="location.href='@Url.Action("RegisteredSchool", "Statistic")';return false;">detail</a>
                                    </label>
                                    <br>
                                    <label class="border border-danger" for="Event_Schedule">
                                        Registered contests:  @(Model.total_contestant) <a style="text-decoration: underline" onclick="location.href='@Url.Action("TeamContest", "Statistic")';return false;">detail</a>
                                    </label>
                                </div>
                                <div class="col-lg-12" id="under" style="border-top: 1px solid gray">
                                    <label>Registered is waiting for confirmation (<span style="color: #337ab7">total = @(Model.school_confirrmation.Count)</span>)</label>
                                    <table id="dtBasicExampleSchool" class="table table-striped table-bordered table-sm" width="100%">
                                        <thead>
                                            <tr>
                                                <th scope="col" width="1%">No</th>
                                                <th scope="col">School name</th>
                                                <th scope="col" width="30%">School phone</th>
                                                <th scope="col" width="10%">Teams</th>
                                                <th scope="col" width="10%">Members</th>
                                                <th scope="col" width="170px"></th>
                                            </tr>
                                        </thead>
                                        <tbody id="table-contests">
                                            @{int count = 0;}
                                            @foreach (var item in Model.school_confirrmation)
                                            {
                                                <tr>
                                                    <td class="date-table">@(++count)</td>
                                                    <td class="date-table">@(item.school_name)</td>
                                                    <td class="venue-table">@(item.school_phone)</td>
                                                    <td class="title-table">@(item.total_team)</td>
                                                    <td class="title-table">@(item.total_member)</td>
                                                    <td class="title-table">
                                                        <a onclick="triggerSubmit('@item.school_id',1)" style="cursor:pointer" data-toggle="modal" data-target="#myModal">Accept</a> |
                                                        <a onclick="triggerSubmit('@item.school_id',2)" style="cursor:pointer;color:red" data-toggle="modal" data-target="#myModal">Reject</a> |
                                                        <a href="@Url.Action("DetailSchool", "Statistic")?schoolId=@item.school_id">Detail</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="tab-pane" role="tabpanel" id="step2">
                                <div class="col-lg-12">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Number of event:
                                    </label>
                                    <label class="border border-danger" id="number-events" for="Event_Schedule">
                                        @Model.statistic_EventViewModel.totalEvent
                                    </label>
                                </div>
                                <div class="col-lg-12">
                                    @*<label class="border border-danger" for="Event_Schedule">
                                            Total members of the event:
                                        </label>
                                        <label class="border border-danger" id="number-events" for="Event_Schedule" style="font-weight: normal">
                                            300
                                        </label>*@
                                </div>
                                <div class="col-lg-12" id="under" style="border-top: 1px solid gray">
                                    <table id="dtBasicExampleEvents" class="table table-striped table-bordered table-sm">
                                        <thead>
                                            <tr>
                                                <th class="th-sm" scope="col">No</th>
                                                <th class="th-sm" scope="col">Title</th>
                                                <th class="th-sm" scope="col">Time</th>
                                                <th class="th-sm" scope="col">Location</th>
                                                <th class="th-sm" scope="col">Total member join</th>
                                                <th class="th-sm" scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody id="table-events0">
                                            @{int countE = 0;}
                                            @foreach (var i in Model.statistic_EventViewModel.lstEvents)
                                            {
                                                <tr>
                                                    <td class="date-table" width="1%">@(++countE)</td>
                                                    <td class="date-table">@i.title</td>
                                                    <td class="venue-table">@i.start_date.ToString("dd-MM-yyyy")</td>
                                                    <td class="title-table">@i.venue</td>
                                                    <td class="title-table" style="width: 14%;">@i.total_joined</td>
                                                    <td class="title-table text-center" style="width: 4%;">
                                                        <a onclick="location.href='/Statistic/RegistrationSchedule?eventId=@i.event_id'">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-text-fill" viewBox="0 0 16 16">
                                                                <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM4.5 9a.5.5 0 0 1 0-1h7a.5.5 0 0 1 0 1h-7zM4 10.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 1 0-1h4a.5.5 0 0 1 0 1h-4z" />
                                                            </svg>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane" role="tabpanel" id="step3">
                                <div class="col-lg-4">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Number of shirts XS:
                                    </label>
                                    <label class="border border-danger" for="Event_Schedule">
                                        @Model.statistic_shirtSizeViewModel.sizeXS
                                    </label>
                                </div>
                                <div class="col-lg-4">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Number of shirts S:
                                    </label>
                                    <label class="border border-danger" for="Event_Schedule">
                                        @Model.statistic_shirtSizeViewModel.sizeS
                                    </label>
                                </div>
                                <div class="col-lg-4">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Number of shirts M:
                                    </label>
                                    <label class="border border-danger" for="Event_Schedule">
                                        @Model.statistic_shirtSizeViewModel.sizeM
                                    </label>
                                </div>
                                <div class="col-lg-4">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Number of shirts L:
                                    </label>
                                    <label class="border border-danger" for="Event_Schedule">
                                        @Model.statistic_shirtSizeViewModel.sizeL
                                    </label>
                                </div>
                                <div class="col-lg-4">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Number of shirts XL:
                                    </label>
                                    <label class="border border-danger" for="Event_Schedule">
                                        @Model.statistic_shirtSizeViewModel.sizeXL
                                    </label>
                                </div>
                                <div class="col-lg-4">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Number of shirts 2XL:
                                    </label>
                                    <label class="border border-danger" for="Event_Schedule">
                                        @Model.statistic_shirtSizeViewModel.size2XL
                                    </label>
                                </div>
                                <div class="col-lg-4">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Number of shirts 3XL:
                                    </label>
                                    <label class="border border-danger" for="Event_Schedule">
                                        @Model.statistic_shirtSizeViewModel.size3XL
                                    </label>
                                </div>
                                <div class="col-lg-12">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Total number of registered shirts:
                                    </label>
                                    <label class="border border-danger" for="Event_Schedule">
                                        @Model.statistic_shirtSizeViewModel.totalRegisterdSize
                                    </label>
                                </div>
                                <div class="col-lg-12" id="under" style="border-top: 1px solid gray">
                                    <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th class="th-sm" scope="col">No</th>
                                                <th class="th-sm" scope="col">Member</th>
                                                <th class="th-sm" scope="col">Email</th>
                                                <th class="th-sm" scope="col" width="10%">Phone number</th>
                                                @*<th scope="col">School name</th>
                                                    <th scope="col">Institution name</th>*@
                                                <th class="th-sm" scope="col" style="width:100px;">Shirt size</th>
                                            </tr>
                                        </thead>
                                        <tbody id="table-events">
                                            @{int countM = 0;}
                                            @foreach (var i in Model.statistic_shirtSizeViewModel.lstMembers)
                                            {
                                                <tr>
                                                    <td class="date-table" width="1%">@(++countM)</td>
                                                    <td class="date-table" width="20%">
                                                        @(i.first_name +" "+ i.middle_name +" "+ i.last_name)
                                                    </td>
                                                    <td class="date-table" width="20%">@(i.email??"N/A")</td>
                                                    <td class="venue-table" width="20%">@(i.phone_number?? "N/A")</td>
                                                    @*<td class="venue-table"></td>
                                                        <td class="venue-table"></td>*@
                                                    <td class="venue-table" width="6%">@(i.shirt_sizing?? "N/A")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Reason/Note</h4>
            </div>
            @using (Html.BeginForm("RegistrationAction", "Statistic", FormMethod.Get, new { id = "reject-form" }))
            {
                <div class="modal-body">
                    <input id="schoolId" type="hidden" name="schoolId" />
                    <input id="action" type="hidden" name="type" value="1" />
                    <textarea id="reason-text" class="form-control" name="note" required></textarea>
                </div>
                <div class="modal-footer">
                    <button id="submit-reject" type="button" class="btn btn-primary" data-dismiss="modal">Submit</button>
                    <button id="reset-reject" style="color:black" type="reset" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            }
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $("#newModal").modal("show");
        $("#newModal").on('hide.bs.modal', function () {

        });
        $("#newModal").on('hidden.bs.modal', function () {

        });
        $('#dtBasicExampleEvents').DataTable();
        $('.dataTables_length').addClass('bs-select');

        $('#dtBasicExample').DataTable();
        $('.dataTables_length').addClass('bs-select');

        $('#dtBasicExampleSchool').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });

    document.getElementById("reset-reject").addEventListener('click', function () {
        document.getElementById("reason-text").value = "";
        document.getElementById("schoolId").value = "";
        document.getElementById("action").value = "";
    });
    document.getElementById("submit-reject").addEventListener('click', function () {
        var isEmtyReason = document.getElementById("reason-text").value == '';
        if (!isEmtyReason) {
            document.getElementById("reject-form").submit();
        } else {
            alert("Reason cannot be empty");
        }
    });
    function triggerSubmit(id, action) {
        document.getElementById("schoolId").value = id;
        document.getElementById("action").value = action;
    }
</script>
