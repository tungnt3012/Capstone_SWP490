@model  Capstone_SWP490.Models.statisticViewModel.statistic_index_ViewModel
@{
    ViewBag.Title = "Overview";
}

<style>
    #menu_Overview {
        color: #ffffff !important;
        background: #30cf6b;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">Overview</label>
        </div>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1" id="under">
                <section>
                    <div class="form-group" style="padding-left:15px">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li role="presentation" class="nav-item active">
                                <a href="#step1" class="nav-link front-size-title active" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">Contest Registration</a>
                            </li>
                            <li role="presentation" class="nav-item">
                                <a href="#step2" class="nav-link front-size-title active" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">Event Registration</a>
                            </li>

                        </ul>
                    </div>
                    <form role="form">
                        <div class="tab-content">
                            <div class="tab-pane active" role="tabpanel" id="step1">
                                <div class="col-lg-12">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Registered Schools: 4 <a style="text-decoration: underline">detail</a>
                                    </label>
                                    <br>
                                    <label class="border border-danger" for="Event_Schedule">
                                        Teams:  4 <a style="text-decoration: underline">detail</a>
                                    </label>
                                </div>
                                <div class="col-lg-12" id="under" style="border-top: 1px solid gray">
                                    <label>Registered is waiting for confirmation (<span style="color: #337ab7">total= @(Model.school_confirrmation.Count)</span>)</label>
                                    <table class="table table-striped table-bordered table-sm" width="100%">
                                        <thead>
                                            <tr>
                                                <th scope="col" width="4%">STT</th>
                                                <th scope="col" width="15%">School Name</th>
                                                <th scope="col" width="10%">School Phone</th>
                                                <th scope="col" width="4%">Teams</th>
                                                <th scope="col" width="4%">Members</th>
                                                <th scope="col" width="8%"></th>
                                            </tr>
                                        </thead>
                                        <tbody id="table-events">
                                            @{int count = 0;}
                                            @foreach (var item in Model.school_confirrmation)
                                            {
                                                <tr>
                                                    <td class="date-table">@(++count)</td>
                                                    <td class="date-table">@(item.school_name)</td>
                                                    <td class="venue-table">@(item.school_phone)</td>
                                                    <td class="title-table">@(item.total_team)</td>
                                                    <td class="title-table">@(item.total_member)</td>
                                                    <td class="title-table">
                                                        <a  onclick="triggerSubmit('@item.school_id',1)" style="cursor:pointer" data-toggle="modal" data-target="#myModal">Accept</a> |
                                                        <a  onclick="triggerSubmit('@item.school_id',2)" style="cursor:pointer;color:red" data-toggle="modal" data-target="#myModal">Reject</a> |
                                                        <a href="@Url.Action("DetailSchool", "Statistic")?schoolId=@item.school_id">Detail</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="tab-pane" role="tabpanel" id="step2">
                                <div class="col-lg-12">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Number of Event:
                                    </label>
                                    <label class="border border-danger" for="Event_Schedule" style="font-weight: normal">
                                        10
                                    </label>
                                </div>
                                <div class="col-lg-12">
                                    <label class="border border-danger" for="Event_Schedule">
                                        Total members of the event:
                                    </label>
                                    <label class="border border-danger" for="Event_Schedule" style="font-weight: normal">
                                        300
                                    </label>
                                </div>
                                <div class="col-lg-12" id="under">
                                    <table class="table table-striped table-bordered table-sm">
                                        <thead>
                                            <tr>
                                                <th scope="col" style="width:5px;">STT</th>
                                                <th scope="col">Title</th>
                                                <th scope="col">Location</th>
                                                <th scope="col">Time Start</th>
                                                <th scope="col">Time End</th>
                                                <th scope="col" style="width:120px;">Total Member</th>

                                            </tr>
                                        </thead>
                                        <tbody id="table-events">
                                            <tr>
                                                <td class="date-table">1</td>
                                                <td class="date-table">Đăng kí OLP'21, PROCON VN và Kỳ Thi ICPC Asia Hanoi</td>
                                                <td class="venue-table">Đai học FPT, Hà Nội</td>
                                                <td class="title-table">22-03-2022</td>
                                                <td class="title-table">22-03-2022</td>
                                                <td class="title-table">100</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="clearfix"></div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Reason/Note</h4>
            </div>
            @using (Html.BeginForm("RegistrationAction", "Statistic", FormMethod.Get, new { id = "reject-form" }))
            {
                <div class="modal-body">
                    <input id="schoolId" type="hidden" name="schoolId" />
                    <input id="action" type="hidden" name="type" value="1"/>
                    <textarea id="reason-text" class="form-control" name="note" required></textarea>
                </div>
                <div class="modal-footer">
                    <button id="submit-reject" type="button" class="btn btn-primary" data-dismiss="modal">Submit</button>
                    <button id="reset-reject" style="color:black" type="reset" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            }
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $("#newModal").modal("show");
        $("#newModal").on('hide.bs.modal', function () {

        });
        $("#newModal").on('hidden.bs.modal', function () {

        });
    });

    document.getElementById("reset-reject").addEventListener('click', function () {
        document.getElementById("reason-text").value = "";
        document.getElementById("schoolId").value = "";
        document.getElementById("action").value = "";
    });
    document.getElementById("submit-reject").addEventListener('click', function () {
        var isEmtyReason = document.getElementById("reason-text").value == '';
        if (!isEmtyReason) {
            document.getElementById("reject-form").submit();
        } else {
            alert("Reason cannot be empty");
        }
    });
    function triggerSubmit(id,action) {
        document.getElementById("schoolId").value = id;
        document.getElementById("action").value = action;
    }
</script>



