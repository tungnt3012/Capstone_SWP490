@model  Capstone_SWP490.Models.statisticViewModel.statistic_eventDetailViewModel
@{
    ViewBag.Title = "RegistrationSchedule";
}

<style>
    #menu_Overview {
        color: #ffffff !important;
        background: #30cf6b;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<div class="container-fluid xyz">
    <div class="col-lg-12" id="content_area2_header">
        <div class="col-lg-12" id="content_area2_title">
            <label for="exampleInputTitle">Schedule Registration</label>
        </div>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1" id="under">
                <section>
                    <div class="form-group" style="padding-left:15px">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li role="presentation" class="nav-item active">
                                <a href="#step1" class="nav-link front-size-title active" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">Schedule Registration</a>
                            </li>
                        </ul>
                    </div>
                    <form role="form">
                        <div class="tab-content">
                            <div class="tab-pane active" role="tabpanel" id="step1">
                                @if (Model.event_id != 0)
                                {
                                    <div class="col-lg-12">
                                        <label class="border border-danger" for="Event_Schedule">
                                            Title:
                                        </label>
                                        <label class="border border-danger" for="Event_Schedule">
                                            @Model.title
                                        </label>
                                    </div>
                                    <div class="col-lg-12">
                                        <label class="border border-danger" for="Event_Schedule">
                                            Date:
                                        </label>
                                        <label class="border border-danger" for="Event_Schedule">
                                            @Model.start_date.ToString("dd-MM-yyyy")
                                        </label>
                                    </div>
                                    <div class="col-lg-12">
                                        <label class="border border-danger" for="Event_Schedule">
                                            Time:
                                        </label>
                                        <label class="border border-danger" for="Event_Schedule">
                                            @Model.start_date.ToString("HH:mm") -  @Model.end_date.ToString("HH:mm")
                                        </label>
                                    </div>
                                    <div class="col-lg-12">
                                        <label class="border border-danger" for="Event_Schedule">
                                            Location:
                                        </label>
                                        <label class="border border-danger" for="Event_Schedule">
                                            @Model.venue
                                        </label>
                                    </div>
                                    <div class="col-lg-12" id="under" style="border-top: 1px solid gray">
                                        <table class="table table-striped table-bordered table-sm">
                                            <thead>
                                                <tr>
                                                    <th scope="col" width="1%">No</th>
                                                    <th scope="col">Member</th>
                                                    <th scope="col">Email</th>
                                                    <th scope="col" width="10%">Phone number</th>
                                                    @*<th scope="col">School name</th>*@
                                                    @*<th scope="col">Institution name</th>*@
                                                    <th scope="col" style="width:100px;">Shirt Size</th>
                                                </tr>
                                            </thead>
                                            <tbody id="table-events">
                                                @if (Model.lstMembers.Count > 0)
                                                {
                                                    int countM = 0;
                                                    foreach (var i in Model.lstMembers)
                                                    {
                                                        <tr>
                                                            <td class="date-table">@(++countM)</td>
                                                            <td class="date-table">@i.first_name @i.middle_name @i.last_name</td>
                                                            <td class="date-table">@i.email</td>
                                                            <td class="venue-table">@i.phone_number</td>
                                                            @*<td class="venue-table">FPT University</td>*@
                                                            @*<td class="venue-table">FPT HN</td>*@
                                                            <td class="venue-table">@(i.shirt_sizing ?? "no infor")</td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td class="date-table"></td>
                                                        <td class="date-table"><i>No member join</i></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                <div class="col-lg-12">
                                    <div class="pull-left">
                                        <button type="button" id="btn-cancel-event" onclick="window.location.href = '/Statistic'" class="btn btn-secondary">Back</button>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

